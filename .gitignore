from selenium import webdriver
from selenium.webdriver.common.keys import Keys
import time

# Ganti dengan username dan password kamu
USERNAME = 'your_username'
PASSWORD = 'your_password'
# Nama grup DM atau nama pengguna
GROUP_NAME = 'Nama Grup'

# Pesan yang ingin dikirim
MESSAGE = 'Halo, ini pesan dari bot!'

driver = webdriver.Chrome()  # Pastikan chromedriver di PATH
driver.get('https://www.instagram.com/accounts/login/')

time.sleep(3)
# Login
driver.find_element('name', 'username').send_keys(USERNAME)
driver.find_element('name', 'password').send_keys(PASSWORD)
driver.find_element('name', 'password').send_keys(Keys.RETURN)
time.sleep(5)

# Navigasi ke DM
driver.get('https://www.instagram.com/direct/inbox/')
time.sleep(5)

# Cari grup atau user
search_box = driver.find_element('xpath', '//input[@placeholder="Search"]')
search_box.send_keys(GROUP_NAME)
time.sleep(2)
search_box.send_keys(Keys.RETURN)
time.sleep(2)

# Kirim pesan
text_box = driver.find_element('xpath', '//textarea[@placeholder="Message..."]')
text_box.send_keys(MESSAGE)
text_box.send_keys(Keys.RETURN)
time.sleep(2)

# Tutup browser
driver.quit()
